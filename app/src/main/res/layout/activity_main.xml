<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/toolbar_include"
        android:layout_width="match_parent"
        android:layout_height="@dimen/include_toolbar_height"
        android:background="@color/toolbar_bg"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:titleTextColor="@android:color/white">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_user"
                android:paddingTop="8dp"
                android:paddingEnd="8dp"
                android:paddingBottom="8dp"
                app:paddingStart="2dp"
                android:src="@mipmap/ic_bili"
                android:layout_width="@dimen/include_toolbar_height"
                android:layout_height="@dimen/include_toolbar_height"/>
            <TextView
                android:id="@+id/toolbar_tv"
                style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/include_toolbar_height"
                android:gravity="center"
                tools:text="果壳"
                android:layout_marginStart="50dp"
                android:textColor="@android:color/white"
                android:textSize="16sp"/>
            <ImageView
                android:id="@+id/toolbar_iv"
                android:layout_alignParentEnd="true"
                android:padding="8dp"
                android:src="@mipmap/search_white"
                android:layout_marginEnd="56dp"
                android:layout_width="@dimen/include_toolbar_height"
                android:layout_height="@dimen/include_toolbar_height"/>
            <ImageView
                android:layout_width="@dimen/include_toolbar_height"
                android:layout_height="@dimen/include_toolbar_height"
                android:padding="8dp"
                android:src="@mipmap/icon_switch"
                android:layout_marginEnd="4dp"
                android:id="@+id/toolbar_switch"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>
    <FrameLayout
        android:padding="2dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/container">
    </FrameLayout>

</LinearLayout>