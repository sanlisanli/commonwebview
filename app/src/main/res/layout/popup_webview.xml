<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:layout_width="180dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/menu_bigimg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/include_toolbar_height"
        android:orientation="horizontal">
        <ImageView
            android:layout_marginStart="4dp"
            android:padding="6dp"
            android:layout_width="@dimen/include_toolbar_height"
            android:layout_height="@dimen/include_toolbar_height"
            android:src="@mipmap/fullscreen"/>
        <TextView
            android:gravity="center"
            android:textSize="14sp"
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="#212121"
            android:layout_marginEnd="12dp"
            android:text="查看大图"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/menu_browser"
        android:layout_width="match_parent"
        android:layout_height="@dimen/include_toolbar_height"
        android:orientation="horizontal">
        <ImageView
            android:layout_marginStart="4dp"
            android:padding="6dp"
            android:layout_width="@dimen/include_toolbar_height"
            android:layout_height="@dimen/include_toolbar_height"
            android:src="@mipmap/browser_black"/>
        <TextView
            android:gravity="center"
            android:textSize="14sp"
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="#212121"
            android:layout_marginEnd="12dp"
            android:text="在浏览器中打开"/>
    </LinearLayout>


</LinearLayout>